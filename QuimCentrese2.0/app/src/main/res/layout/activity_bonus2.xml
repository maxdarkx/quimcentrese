<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.udea.juancarlos.quimcentrese.BonusActivity2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sBonus2"
        android:id="@+id/textViewb2"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/infoButtonB2"
        android:layout_alignStart="@+id/infoButtonB2"
        style="@style/TextStyle">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sDesc2"
        android:id="@+id/textViewDesc2"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewb2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        style="@style/TextStyle">
    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoButtonB2"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/ic_menu_myplaces"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
